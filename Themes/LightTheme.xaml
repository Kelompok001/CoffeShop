<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CoffeShop.Themes">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#EDEDED"/>

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#985741"/>
    <SolidColorBrush x:Key="PrimaryGrayColor" Color="#EEEEEE"/>
    
    <!-- Secundary Colors -->
    <SolidColorBrush x:Key="SecundaryColor" Color="#E0B7A9"/>
    <SolidColorBrush x:Key="SecundaryGrayColor" Color="#EEEEEE"/>

    <!-- Typograhy Colors -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#1D1D1D"/>
    <SolidColorBrush x:Key="TextSecundaryColor" Color="#747474"/>
    <SolidColorBrush x:Key="TextTernaryColor" Color="#985741"/>

    <!-- Icons Colors -->
    <SolidColorBrush x:Key="ActionIconColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="IconColor" Color="#929292"/>

    <!-- Buton Colors -->
    <SolidColorBrush x:Key="ButtonPrimaryColor" Color="#985741"/>
    <SolidColorBrush x:Key="ButtonHoverColor" Color="#D4856B"/>
</ResourceDictionary>