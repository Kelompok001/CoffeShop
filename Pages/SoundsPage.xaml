<Page x:Class="CoffeShop.Pages.SoundsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1490"
      Title="SoundsPage">

    <Border CornerRadius="5" Background="{DynamicResource PrimaryBackgroundColor}">


        <StackPanel>

            <Image Source="\Assets\Images\LogIm.png" 
                   Height="943" 
                   Width="558"
                   Margin="950,-10,0,0"/>

            <StackPanel Margin="-50,-50,0,0">

                <TextBlock Text="Tell us about you"
                           FontSize="64"
                           Margin="-500,-700,0,0"
                           HorizontalAlignment="Center"
                           Style="{DynamicResource TittleText}"/>

                <TextBlock Text="Your name"
                           FontSize="32"
                           Margin="190,-600,0,0"
                           HorizontalAlignment="Left"
                           Style="{DynamicResource NormalText}"/>

                <TextBox Margin="-450,-1010,0,0"
                         Width="709"
                         Height="78"
                         Style="{DynamicResource TextBoxR}"/>

                <TextBlock Text="Phone Number"
                           FontSize="32"
                           Margin="190,-450,0,0"
                           HorizontalAlignment="Left"
                           Style="{DynamicResource NormalText}"/>

                <TextBox Margin="-450,-710,0,0"
                         Width="709"
                         Height="78"
                         Style="{DynamicResource TextBoxR}"/>


                <Button
                    Style="{DynamicResource RoundedButton}"
                    Width="552"
                    Height="76"
                    Content="Make Order"
                    Margin="-485,-400,0,0"/>


            </StackPanel>

        </StackPanel>


    </Border>
</Page>
